// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
 id   Int @id @default(autoincrement())
 name String
 email String @unique
 password String
 phoneNumber Int
 NationalId Int
 avatar String?
}

model Circle {
  id          Int       @id @default(autoincrement())
  members     Int       
  amount      Float     
  slot        Slot      
  adminFees   Float?     
  duration    Duration  
  startOn     DateTime  
  installments Int      
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum Slot {
  FIRST
  MEDIUM
  LAST
}

enum Duration {
  SIX_MONTHS
  TEN_MONTHS
  TWELVE_MONTHS
}
